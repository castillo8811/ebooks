{% extends 'base.html.twig' %}

{% block title %}Preguntas{% endblock %}

{%block stylesheets%}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{ asset('css/plugins/datatables.bootstrap.min.css') }}"/>

    <!-- Our CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('css/vocabulary.css') }}"/>
{% endblock %}

{% block content %}

    <!--Barra Superior de titulo-->
    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-md-12">
                 <div class="col-xs-7">
                    <h3 class="animated fadeInLeft">Catalogo de Preguntas</h3>
                    <p class="animated fadeInDown">
                    Home <span class="fa-angle-right fa"></span> Credits
                    </p>
                </div>

            </div>
        </div>
    </div>
    <!--Hoja Blanca-->
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-body">
            {% if message is defined %}
                    <h2>{{ message }}</h2>
                {% else %}
                <div class="responsive-table">
                    <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Question</th>
                            <th>Type</th>
                            <th>Score</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for i in result %}
                         <tr class="tr-vocabulary" onclick="document.location = '{{ path('show_question', {'id' : i.id }) }}';">
                             <td>
                                {{ i.id }}
                             </td>
                             <td>
                                {{ i.question }}
                             </td>
                             <td>
                                {{ i.type}}
                             </td>
                             <td>
                                {{ i.score}}
                             </td>
                             <td>
                                {{ i.status}}
                             </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
            </div>
        </div>
    </div>
    <!-- end: hoja blanca -->

{% endblock %}

{% block javascripts %}

    {{ parent() }}


    <script src="{{ asset('js/plugins/jquery.datatables.min.js') }}"></script>
    <script src="{{ asset('js/plugins/datatables.bootstrap.min.js') }}"></script>

    <!--script type="text/javascript">
        $(document).ready(function(){
            $('#datatables-example').DataTable();
        });
    </script-->

     <!-- Our JavaScript -->
    <script src="{{ asset('js/tags/tables.js') }}"></script>

{% endblock %}
