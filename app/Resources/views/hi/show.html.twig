{% extends 'base.html.twig' %}

{% block title %}Hi {{ name }}{% endblock %}

{% block content %}
    <!--Barra Superior de titulo-->
    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-md-12">
                <h3 class="animated fadeInLeft">Credits</h3>
                <p class="animated fadeInDown">
                    Home <span class="fa-angle-right fa"></span> Credits
                </p>
            </div>
        </div>
    </div>
    <!--Hoja Blanca-->
    <div class="col-md-12">
        <div class="panel">
            <div class="pull-right article-v1-time">
                <em> Interviews</em></div>
            <div class="panel-body">

                <h1>Hi, my name is {{ name }}</h1>

                <a href="{{ path('hi_amigo', {'nombre': name}) }}">Json Notes</a>

                <ul>
                    {% for note in notes %}
                        <li>{{ note }}</li>
                    {% endfor %}
                </ul>
                {{ dump() }}

            </div>
        </div>
    </div>
    <!-- end: hoja blanca -->

{% endblock %}
