{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vocabulary list</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Machinename</th>
                <th>Status</th>
                <th>Visibility</th>
                <th>Description</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vocabulary in vocabularies %}
            <tr>
                <td><a href="{{ path('vocabulary_show', { 'id': vocabulary.id }) }}">{{ vocabulary.name }}</a></td>
                <td>{{ vocabulary.machineName }}</td>
                <td>{{ vocabulary.status }}</td>
                <td>{{ vocabulary.visibility }}</td>
                <td>{{ vocabulary.description }}</td>
                <td>{{ vocabulary.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vocabulary_show', { 'id': vocabulary.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vocabulary_edit', { 'id': vocabulary.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vocabulary_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
