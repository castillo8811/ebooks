{# app/Resources/views/vocabulary/create.html.twig #}

{% extends 'base.html.twig' %}

{% form_theme form 'form/form_errors.html.twig' %}

{% block title %}Catalogos{% endblock %}

{%block stylesheets%}
    {{ parent() }}

    <!-- Our CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('css/vocabulary.css') }}"/>

{% endblock %}

{% block content %}

    <!--Barra Superior de titulo-->
    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-md-12">
                <h3 class="animated fadeInLeft">Catalogo</h3>
                <p class="animated fadeInDown">
                    Home <span class="fa-angle-right fa"></span> Credits
                </p>
            </div>
        </div>
    </div>
    <!--Hoja Blanca-->
    <div class="col-md-12 panel">
        <div class="col-md-12 panel-heading">
            <h4>Crear Catalogo</h4>
        </div>
        <div class="col-md-12 panel-body">
            <div class="col-md-12">
                <form class="cmxform" id="signupForm" method="post">
                    <div class="col-md-12" id="form">
                        <div class="form-group form-animate-text separacion-campos">
                            {{ form_widget(form.name, { 'attr': {'class': 'form-text'} }) }}
                            <span class="bar"></span>
                            {{ form_label(form.name, "Nombre") }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="form-group form-animate-text separacion-campos">
                            {{ form_widget(form.description, { 'attr': {'class': 'form-text'} }) }}
                            <span class="bar"></span>
                            {{ form_label(form.description, "Descripcion") }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="form-group form-animate-text separacion-campos">
                            {{ form_widget(form.status, { 'attr': {'class': 'form-text'} }) }}
                            <span class="bar"></span>
                            {{ form_label(form.status, "Estado") }}
                            {{ form_errors(form.status) }}
                        </div>
                        <div class="form-group form-animate-text separacion-campos">
                            {{ form_widget(form.visibility, { 'attr': {'class': 'form-text'} }) }}
                            <span class="bar"></span>
                            {{ form_label(form.visibility, "Visibilidad") }}
                            {{ form_errors(form.visibility) }}
                        </div>

                        {{ form_row(form.save, { 'attr': {'class': 'col-xs-3 col-xs-offset-2 submit btn btn-3d btn-default texto-boton botones animar-boton'} }) }}

                        {{ form_row(form._token) }}

                        <a href="{{ path("show_all_vocabularies") }}" class="col-xs-3 col-xs-offset-2 btn btn-3d btn-danger botones animar-boton">Cancelar</a>

                    </div>
                </form>

            </div>
        </div>
    </div>

    <!-- end: hoja blanca -->

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src="{{ asset('js/plugins/jquery.validate.min.js') }}"></script>

    <!-- Our Javascript -->
    <script src="{{ asset('js/vocabulary/validation.js') }}"></script>

{% endblock %}
