{# app/Resources/views/user/delete.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{%block stylesheets%}
    {{ parent() }}

    <!-- Our CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('css/user.css') }}"/>
{% endblock %}

{% block content %}
    <!--Barra Superior de titulo-->
    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-xs-12">
                <div class="col-xs-7">
                    <h3 class="animated fadeInLeft">Usuario</h3>
                    <p class="animated fadeInDown">
                        Home <span class="fa-angle-right fa"></span> Credits
                    </p>
                </div>
                <div class="col-xs-3 col-xs-offset-2">
                    <a href="{{ path("create_user") }}" class="col-xs-12 submit btn btn-3d btn-default texto-boton botones crear-boton animar-boton">Crear</a>
                </div>
            </div>
        </div>
    </div>
    <!--Hoja Blanca-->
    <div class="col-md-12 panel">
        <div class="col-md-12 panel-heading">
            <h4>Borrar Usuario</h4>
        </div>
        <div class="col-md-12 panel-body">
            <div class="col-xs-12">
                {% if message is defined %}
                    <h2>{{ message }}</h2>
                {% else %}
                    <h1 class="texto-titulo">{{ result.email }}</h1>
                    <h2 class="centrar-texto">Â¿Estas seguro que lo quieres Borrar?</h2>
                    <a href="{{ path("show_user", {'id' : result.id }) }}" class="col-xs-3 col-xs-offset-2 submit btn btn-3d btn-default texto-boton botones animar-boton">No</a>
                    <form method="post">
                        {{ form_widget(form.delete, { 'attr': {'class': 'col-xs-3 col-xs-offset-2 btn btn-3d btn-danger botones animar-boton'} }) }}
                        {{ form_label(form.delete) }}
                        {{ form_row(form._token) }}
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
    <!-- end: hoja blanca -->

{% endblock %}

{% block javascripts %}

    {{ parent() }}

{% endblock %}